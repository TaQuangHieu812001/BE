@model FunitureApp.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa người dùng</h1>


<div>
    <h4>Thông tin người dùng</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên người dùng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        </dd>
        <dt class = "col-sm-2">
           Tài khoản
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateOn)
        </dd>
        
        <dt class = "col-sm-2">
            Sửa vào
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt class = "col-sm-2">
           Sửa bởi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
